{
    "manifest_version": 3,
    "name": "Picture-in-Picture Extension",
    "version": "1.0",
    "description": "Watch videos in Picture-in-Picture mode.",
    "action": {
      "default_popup": "popup.html"    
    },
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": [
      "<all_urls>"
    ]
  }
  